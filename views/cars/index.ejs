<%- include('../partials/header') %>
<h1>Your Vehicles</h1>
<%if(!customer.firstName){%>
    <h2>Profile Setup</h2>
    <p>Please fill out the form to set up your account:</p>
    <form action="/cars/newcustomer?_method=PUT" method="POST" autocomplete="'off">
    <p>E-mail:</p>
    <p><%=customer.email%></p>
    <p>Fist Name:</p>
    <input type="text" name="firstName">
    <p>Last Name:</p>
    <input type="text" name="lastName">
    <p>Phone #:</p>
    <input type="text" name="phone" >
    <p>Make:</p>
    <input type="text" name="make">
    <p>Model:</p>
    <input type="text" name="model">
    <p>Year:</p>
    <input type="text" name="year">
    <button type="submit">Submit</button>
   </form>
    <% } else{%> 
        <h2> Welcome <%= customer.firstName%> </h2>
        <h3>Vehicles:</h3>
        <p>Select a Vehicle to view current appointments or book an appointment</p>
        <ul type="none">
        <% car.forEach(function(c){%>
        <li><form method="GET" action="/cars/<%=c.id%>"?_method="DELETE"><button>X</button></form>
            <form action="/cars/<%=c.id%>/edit" method="GET"><button>...</button></form>
            <a href="/cars/<%=c.id%>"><%= c.make %> <%= c.model %> <%=c.year %></a>
        </li> 
        <%})%>
        </ul>
        <form action="/cars/new/">
            <input type="submit" value="Add A New Vehicle:">
        </form>
        


    <% } %> 
<%- include('../partials/footer') %>