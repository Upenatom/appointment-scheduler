<%- include('../partials/header') %>
<h1>Upcoming Apponmtments for your <%= car.make %> <%= car.model %> <%= car.year %>   </h1>
<a href="/dashboard/<%=car.id%>/appointments/new">Book an appointment</a>
<% if(car.appointment.length===0){%>
    <p> You have no upcoming appointments</p>
    <%}else{%>
        <ul type="none">
            <%car.appointment.forEach(function(a,i){%>
                <li>
                    <p><%=a.date.toString().slice(0,15)%></p>
                    <p>Time:<%=a.time %></p>
                    <p>Problem:<%=a.carSymptom%></p>
                </li>
                <form method="GET" action="/dashboard/<%=car.id%>/appointments/<%=a.id%>?_method=DELETE">
                    <button type="submit">Delete</button>
                </form>
                <form method="GET" action="/dashboard/<%=car.id%>/appointments/<%=a.id%>/update">
                    <button type="submit">Edit</button>
                </form>
                    <%  }) %>
                    <%} %> </ul>
<%- include('../partials/footer') %>